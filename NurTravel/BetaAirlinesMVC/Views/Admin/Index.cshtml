@{
    ViewBag.Title = "Admin: Main";
    Layout = "~/Views/Shared/_BetaAirlinesLayout.cshtml";
}

<style>
    .content {
        background-color: #f5f5f5;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: auto;
        margin-top: 50px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .content h2 {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #007bff;
            text-align: center;
        }

        .content ul.adm {
            list-style-type: none;
            padding: 0;
        }

            .content ul.adm li {
                margin: 15px 0;
                font-size: 1.2em;
            }

                .content ul.adm li a {
                    text-decoration: none;
                    color: #007bff;
                    padding: 10px 15px;
                    border-radius: 5px;
                    transition: background-color 0.3s, color 0.3s;
                    display: block;
                    text-align: center;
                    background-color: #e9ecef;
                }

                    .content ul.adm li a:hover {
                        background-color: #007bff;
                        color: #ffffff;
                    }

        .content hr {
            border: 0;
            height: 1px;
            background: #ccc;
            margin: 20px 0;
        }
</style>

<section class="content flexcolumn">
    <h2>@ViewBag.Title</h2>
    <ul class="adm">
        <li>@Html.ActionLink("Users", "Index", "Users", null, new { title = "Users" })</li>
        <li>@Html.ActionLink("User Roles", "Index", "UserRoles", null, new { title = "User Roles" })</li>
        <hr />
        <li>@Html.ActionLink("Airports", "Index", "Airports", null, new { title = "Airports" })</li>
        <li>@Html.ActionLink("Flights", "Index", "Flights", null, new { title = "Flights" })</li>
        <li>@Html.ActionLink("Booked Flights", "Index", "BookedFlights", null, new { title = "Flights" })</li>
        
        <hr />
        <li>@Html.ActionLink("ContactUs Messages", "Messages", "Contact", null, new { title = "Contact Us Messages" })</li>
        <hr />
        <li>@Html.ActionLink("Book a Flight", "BookAFlight", "Flights", null, new { title = "Book a Flight" })</li>
        
    </ul>
</section>
