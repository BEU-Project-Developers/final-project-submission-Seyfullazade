@model BetaAirlinesMVC.Models.Flight

@{
    ViewBag.Title = "Flight Details";
    Layout = "~/Views/Shared/_BetaAirlinesLayout.cshtml";
}

<style>
    .content {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .content h2 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

    .dl-horizontal dt {
        float: left;
        width: 160px;
        overflow: hidden;
        clear: left;
        text-align: right;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-weight: bold;
        color: #555;
    }

    .dl-horizontal dd {
        margin-left: 180px;
        padding-bottom: 10px;
        font-size: 1em;
        color: #555;
    }

        .dl-horizontal dd::after {
            content: "";
            display: block;
            clear: both;
        }

    .text-left {
        margin-top: 20px;
    }

    .form-group {
        margin-top: 20px;
        text-align: center;
    }

        .form-group a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .form-group a:hover {
                background-color: #0056b3;
            }

    .backLink {
        text-align: center;
        margin-top: 20px;
    }

        .backLink a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #6c757d;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .backLink a:hover {
                background-color: #5a6268;
            }

    hr {
        border: 0;
        height: 1px;
        background: #ccc;
        margin-bottom: 20px;
    }
</style>

<section class="content flexcolumn mt-5">
    <h2>@ViewBag.Title</h2>

    <div class="text-left">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ArrivalAirport.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArrivalAirport.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureAirport.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureAirport.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FlightLengthInMinutes)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FlightLengthInMinutes)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Active)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Active)
            </dd>
        </dl>
    </div>

    <div class="form-group">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ActionLink("Edit Flight", "Edit", new { id = Model.Id })
        }
    </div>
    <div class="backLink">
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>
