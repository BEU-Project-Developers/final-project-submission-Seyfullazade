@model IEnumerable<BetaAirlinesMVC.Models.Contact>

@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_BetaAirlinesLayout.cshtml";
}

<section class="content flexcolumn" style="margin-bottom:20px;">

    <h2 style="margin-bottom:20px;">@ViewBag.Title</h2>
    <p>
        @Html.ActionLink("Send a Message", "Index", null, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive mt-5" style="margin-top:20px;">
        <table class="table table-bordered table-hover mt-5">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                        <td>@Html.DisplayFor(modelItem => item.Message)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Active)</td>
                        <td class="buttons">
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            text-align: center; /* Adjust as per your preference */
            border: 1px solid #dee2e6;
            vertical-align: middle;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table th {
            background-color: #343a40;
            color: white;
            font-weight: bold;
        }

    .buttons {
        display: flex;
        gap: 5px;
    }

        .buttons .btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: white;
            font-size: 14px;
            transition: background-color 0.3s;
        }

        .buttons .btn-success {
            background-color: #28a745;
            border: none;
        }

            .buttons .btn-success:hover {
                background-color: #218838;
            }

        .buttons .btn-danger {
            background-color: #dc3545;
            border: none;
        }

            .buttons .btn-danger:hover {
                background-color: #c82333;
            }

</style>