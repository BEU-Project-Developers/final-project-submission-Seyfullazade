@{
    ViewBag.Title = "Thank you!";
    Layout = "~/Views/Shared/_BetaAirlinesLayout.cshtml";
}

<style>
    .content {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
        margin-top: 50px;
    }

        .content h2 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #333;
        }

        .content h3 {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #666;
        }

        .content p {
            font-size: 1.1em;
            margin-bottom: 20px;
            color: #777;
        }

    .button-container {
        text-align: center;
        margin-top: 20px;
    }

        .button-container a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .button-container a:hover {
                background-color: #0056b3;
            }
</style>

<section class="content flexcolumn">
    <h2>@ViewBag.Title</h2>
    <h3>
        Your message has been sent successfully.
    </h3>
    <p>Thank you for contacting us. We will get back to you shortly.</p>
    <div class="button-container">
        <a href="@Url.Action("Index", "Home")">Return to Home</a>
    </div>
</section>
