@model BetaAirlinesMVC.Models.User

@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/_BetaAirlinesLayout.cshtml";
}

<style>
    .content {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: auto;
    }

        .content h2 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #333;
        }

    .dl-horizontal dt {
        float: left;
        width: 160px;
        overflow: hidden;
        clear: left;
        text-align: right;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-weight: bold;
        color: #555;
    }

    .dl-horizontal dd {
        margin-left: 180px;
        padding-bottom: 10px;
        font-size: 1em;
        color: #555;
    }

    .text-left {
        margin-top: 20px;
    }

    .form-group {
        margin-top: 20px;
    }

        .form-group a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .form-group a:hover {
                background-color: #0056b3;
            }

    .backLink a {
        display: inline-block;
        margin-top: 20px;
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s;
    }

        .backLink a:hover {
            color: #0056b3;
        }
</style>

<section class="content flexcolumn mt-5">
    <h2>@ViewBag.Title</h2>

    <div class="text-left">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Username)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Username)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Password)
            </dt>

            <dd>
                @Html.Raw("\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RegisteredDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RegisteredDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserRole.Role)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserRole.Role)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Active)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Active)
            </dd>
        </dl>
    </div>

    <div class="form-group">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ActionLink("Edit User", "Edit", new { id = Model.Id })
        }
    </div>
    <div class="backLink">
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>
