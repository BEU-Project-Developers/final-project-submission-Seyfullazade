@model BetaAirlinesMVC.Models.Airport

@{
    ViewBag.Title = "Edit Airport";
    Layout = "~/Views/Shared/_BetaAirlinesLayout.cshtml";
}

<section class="content flexcolumn">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Edit", "Airports", FormMethod.Post, new { @class = "forms" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control formInput", placeholder = "Enter airport name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ICAO, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ICAO, new { htmlAttributes = new { @class = "form-control formInput", placeholder = "Enter ICAO code" } })
                    @Html.ValidationMessageFor(model => model.ICAO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control formInput", placeholder = "Enter city name" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control formInput", placeholder = "Enter state/province" } })
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control formInput", placeholder = "Enter country name" } })
                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.Active, new[] { new SelectListItem { Text = "Select Active", Value = "" }, new SelectListItem { Text = "True (1)", Value = "1" }, new SelectListItem { Text = "False (0)", Value = "0" } }, new { @class = "form-control formInput" })
                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-warning">Save</button>
                </div>
            </div>
        </div>
    }

    <div class="backLink">
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>

<style>
    /* Custom CSS for Edit Airport Form */

    .formInput{
        padding:10px 5px;
        border:none;
        border-bottom:1px solid #000;
    }
    .content{
        padding-left: 20px;
    }
    .form-horizontal .control-label {
        font-weight: bold;
        padding-top: 7px;
        text-align: right; /* Align labels to the right */
    }

        .form-horizontal .col-md-9 {
            width: 40%;
        }

    .form-control {
        width: 100%; /* Full-width input fields */
    }

    .btn {
        margin-top:20px;
        padding: 8px 20px; /* Adjust button padding */
    }

    .backLink {
        margin-top: 20px;
    }
</style>
